<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/input_one_data">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/icon_personal_photo"
            android:src="@drawable/icon_image"
            app:layout_constraintTop_toTopOf="@id/main"
            app:layout_constraintLeft_toLeftOf="@id/main"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmed Mohamed"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/imageView"
            app:layout_constraintBottom_toBottomOf="@id/pdf"
            app:layout_constraintLeft_toRightOf="@id/imageView"
            app:layout_constraintRight_toLeftOf="@id/pdf"/>


        <ImageView
            android:id="@+id/pdf"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/icon_pdf"
            app:layout_constraintTop_toTopOf="@id/main"
            app:layout_constraintRight_toRightOf="@id/main"/>

        <Button
            android:id="@+id/BTN_accept"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintLeft_toLeftOf="@id/main"
            android:text="Accept"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/blue_curved_button"/>

        <Button
            android:id="@+id/BTN_reject"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/pdf"
            app:layout_constraintRight_toRightOf="@id/main"
            android:text="Reject"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/blue_curved_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>