<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Candidate.CA_FutureElectionDetails"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_constraint"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#2F5597">

        <ImageView
            android:id="@+id/CA_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="@id/toolbar_constraint"
            app:layout_constraintTop_toTopOf="@id/toolbar_constraint"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_constraint"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/pageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/toolbar_constraint"
            app:layout_constraintLeft_toRightOf="@+id/CA_back"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_constraint"
            android:text="Future Election Details"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/CA_setting"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="@id/toolbar_constraint"
            app:layout_constraintTop_toTopOf="@id/toolbar_constraint"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_constraint"
            android:src="@drawable/icon_setting" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/light_gray_background"
        android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main_constraint"
        app:layout_constraintLeft_toLeftOf="@id/main_constraint"
        app:layout_constraintRight_toRightOf="@id/main_constraint">

        <TextView
            android:id="@+id/election_future_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="رئيس إاتحاد الطلبة"
            android:textColor="#666666"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="10dp"
            tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#2F5597"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/TV_election_future_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners90_gray_line"
            android:textColor="@color/black"
            android:maxLength="500"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:text="descripriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondesdescriptionde"/>

            <TextView
                android:id="@+id/title_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#2F5597"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/ll_Election_Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:background="@drawable/corners90_gray_line">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="40dp"
                        android:text="Start Date"
                        android:textSize="22sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners90_gray_line"
                        android:padding="5dp"
                        android:text="22/09/2022"
                        android:textColor="#2F5597"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="40dp"
                        android:text="End Date"
                        android:textSize="22sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/corners90_gray_line"
                        android:text="25/10/2022"
                        android:textColor="#2F5597"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

